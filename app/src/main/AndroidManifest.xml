<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.syncbrothers.hymnatune"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="19"/>

    <!-- Features -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" >
    </uses-feature>



    <!-- Permissions -->

    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Launcher Activity -->

    <application
        android:name=".Sharing.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo">

        <activity
            android:name=".Home_Logo"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Registration -->

        <!-- For sharing -->

        <activity
            android:name=".Sharing.WiFiDirectActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action
                    android:name="com.syncbrothers.hymnatune.Sharing.WiFiDirectActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".Sharing.FileTransferService"
            android:enabled="true" />
        <service
            android:name=".Sharing.WiFiClientIPTransferService"
            android:enabled="true" />

        <activity
            android:name=".Sharing.Page2"
            android:label="@string/title_activity_page2">
            <intent-filter>
                <action android:name="com.syncbrothers.hymnatune.Sharing.Page2" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Sharing.home"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="com.syncbrothers.hymnatune.Sharing.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Sharing.help"
            android:label="@string/title_activity_help">
            <intent-filter>
                <action android:name="com.syncbrothers.hymnatune.Sharing.help" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.syncbrothers.hymnatune.Sharing.MainScreenActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="com.syncbrothers.hymnatune.Sharing.MainScreenActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity-
            android:name="com.syncbrothers.hymnatune.Sharing.ChatSearchScreenFrag"
            android:label="@string/title_activity_chat_search_screen_frag"
            android:configChanges="orientation|screenSize">
        </activity->
        <activity-
            android:name="com.syncbrothers.hymnatune.Sharing.ChatHistoryScreenFrag"
            android:label="@string/title_activity_chat_history_screen_frag"
            android:configChanges="orientation|screenSize" >
        </activity->
        <activity
            android:name="com.syncbrothers.hymnatune.Sharing.QuickPrefsActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.syncbrothers.hymnatune.Sharing.MainScreenActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncbrothers.hymnatune.Sharing.MainScreenActivity" />
            >
        </activity>

        <service android:name="com.syncbrothers.hymnatune.Sharing.LocalService" >
        </service>
        <activity
            android:name="com.syncbrothers.hymnatune.Sharing.ChatActivity"
            android:label="@string/title_activity_chat"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.syncbrothers.hymnatune.Sharing.MainScreenActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncbrothers.hymnatune.Sharing.MainScreenActivity" />
        </activity>
        <activity
            android:name="com.syncbrothers.hymnatune.Sharing.HistoryActivity"
            android:label="@string/title_activity_history"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.syncbrothers.hymnatune.Sharing.MainScreenActivity" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.syncbrothers.hymnatune.Sharing.MainScreenActivity" />
        </activity>



        <!-- For wifi-->

        <activity android:name=".Wifi.PlayScreen"
            android:screenOrientation="portrait"/>
        <activity android:name=".Wifi.Songs"
             android:screenOrientation="portrait"/>
        <activity android:name=".Wifi.PlaySolo"
            android:screenOrientation="portrait"/>
        <activity android:name=".Wifi.PlayScreenSolo"
            android:screenOrientation="portrait"/>
        <activity android:name=".Wifi.PlayScreenHost"
            android:screenOrientation="portrait"/>
        <activity android:name=".Wifi.PlayScreenClient"
            android:screenOrientation="portrait"/>
        <activity android:name=".Wifi.Receiver"
            android:screenOrientation="portrait"/>
        <activity android:name=".Select_Screen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Wifi.Home_Screen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>


    </application>
</manifest>